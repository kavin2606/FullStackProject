type Item {
  id: ID! @id
  createdAt: DateTime! @createdAt
  name: String!
  description: String!
  category: Category
  quantity: String!
  comment: String!
  rating: String!
  postedBy: User @relation(name: "OldRelation")
}
type User {
  id: ID! @id
  name: String!
  email: String! @unique
  password: String!
  items: [Item!]! @relation(name: "OldRelation")
  itemsordered: [Item!]! @relation(name: "NewRelation")
}

type Category {
  id: ID! @id
  name: String! @unique
  itemslist: [Item!]!
}

type Order {
  id: ID! @id
  orderedby:User!
  itempurchased: Item!
}
